{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Bienvenue sur notre site</h1>

    {% if app.user %}
        <p>Connecté en tant que {{ app.user.email }}</p>

        <nav>
            <ul>
                <li><a href="{{ path('app_product_index') }}">Voir les produits</a></li>
                <li><a href="{{ path('app_cart') }}">Voir mon panier</a></li>
                <li><a href="{{ path('app_order_index') }}">Mes commandes</a></li>
                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
            </ul>
        </nav>
    {% else %}
        <p>
            <a href="{{ path('app_login') }}">Connectez-vous</a> pour accéder à votre compte.
        </p>
        <p>
            Vous pouvez aussi <a href="{{ path('app_product_index') }}">parcourir les produits</a> sans compte.
        </p>
    {% endif %}
</div>
{% endblock %}
